<h2>Manage Hashtags & Accounts</h2>
<table border="1" cellpadding="6">
<tr><th>Agent</th><th>Hashtags</th><th>Accounts</th><th>Save</th></tr>
<% agents.forEach(a => { %>
<form method="POST" action="/settings/<%= a.cabal %>">
<tr>
  <td><%= a.cabal %></td>
  <td><input name="topics" value="<%= (a.topics || []).join(', ') %>" size="40"/></td>
  <td><input name="follow_targets" value="<%= (a.follow_targets || []).join(', ') %>" size="40"/></td>
  <td><button>💾 Save</button></td>
</tr>
</form>
<% }) %>
</table>

<a href="/pending">← Back</a>
